@using UserSignup.Models
@model List<User>

@if (Model.Count == 0)
    {
<h2>No Users Yet!</h2>
    }
@if (Model.Count > 0)
    {
<table class="table">
    <tr>
        <th>Username</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.UserName</td>
        <td><a asp-controller="User" asp-action="Details" asp-route-userId="@user.UserId">Details</a></td>
    </tr>
    }
</table>

    }

